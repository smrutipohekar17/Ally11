<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFF"
    tools:context=".Test">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/andika"
            android:padding="20dp"
            android:text="Large text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black" />

        <RadioGroup
            android:id="@+id/radioGroupN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:padding="20dp">

            <RadioButton
                android:id="@+id/radioN1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/andika"
                android:padding="20dp"
                android:text="Strongly Agree"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radioN2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/andika"
                android:padding="20dp"
                android:text="Agree"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radioN3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/andika"
                android:padding="20dp"
                android:text="No Idea"
                android:textColor="@color/black" />


            <RadioButton
                android:id="@+id/radioN4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/andika"
                android:padding="20dp"
                android:text="Disagree"
                android:textColor="@color/black" />


            <RadioButton
                android:id="@+id/radioN5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/andika"
                android:padding="20dp"
                android:text="Strongly Disagree"
                android:textColor="@color/black" />

        </RadioGroup>

        <Button
            android:id="@+id/buttonN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#06D8D8"
            android:fontFamily="@font/andika"
            android:text="Next"
            android:textColor="#000000" />

    </LinearLayout>


</RelativeLayout>